{
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "breadcrumbs.enabled": false,
  "customizeUI.activityBar": "bottom",
  "customizeUI.stylesheet": {
    // Full-width tabs
    ".monaco-workbench .part.editor>.content .editor-group-container>.title .tabs-container>.tab.sizing-fit": "flex-grow: 1; flex-shrink: unset; flex-basis: 100%;",
    // Centered tab text
    ".monaco-workbench .part.editor>.content .editor-group-container>.title .tabs-container>.tab.close-button-left": "padding-right: 28px; text-align: center;",
    // macOS scrollbar style
    ".monaco-workbench .monaco-scrollable-element > .scrollbar > .slider": "border-radius: 14px; left: 3.5px !important; width: 7px !important;",
    // Activity bar at top
    "body.activity-bar-at-bottom .monaco-split-view2.horizontal > .split-view-container > .split-view-view:first-of-type :not(.monaco-pane-view) > .monaco-split-view2.vertical > .split-view-container": "display: flex; flex-direction: column;",
    "body.activity-bar-at-bottom .monaco-split-view2.horizontal > .split-view-container > .split-view-view:first-of-type :not(.monaco-pane-view) > .monaco-split-view2.vertical > .split-view-container > .split-view-view:first-of-type": "order: 2; position: relative; top: unset !important;",
    "body.activity-bar-at-bottom .monaco-split-view2.horizontal > .split-view-container > .split-view-view:first-of-type :not(.monaco-pane-view) > .monaco-split-view2.vertical > .split-view-container > .split-view-view:last-of-type": "order: 1; position: relative; top: unset !important; height: 35px !important;",
    "body.activity-bar-at-bottom .monaco-workbench.vscode-theme-defaults-themes-light_plus-json .part.activitybar": "border-top: 0 !important; border-bottom: 1px solid #d7d7d7; margin-top: 0 !important;",
    "body.activity-bar-at-bottom .monaco-workbench.vscode-theme-defaults-themes-dark_plus-json .part.activitybar": "border-top: 0 !important; border-bottom: 1px solid #474747; margin-top: 0 !important;",
    ":root": "--activity-bar-action-height: 32px;",
    // Actions at bottom
    ".monaco-workbench .part.sidebar": "display: flex; flex-direction: column;",
    ".monaco-workbench.vscode-theme-defaults-themes-light_plus-json .part>.composite.title": "order: 2; border-top: 1px solid #d7d7d7;",
    ".monaco-workbench.vscode-theme-defaults-themes-dark_plus-json .part>.composite.title": "order: 2; border-top: 1px solid #474747;",
    ".monaco-workbench .part>.content": "order: 1;",
    ".monaco-workbench .part>.title>.title-label": "display: none;",
    ".monaco-workbench .part>.composite.title>.title-actions": "padding-left: unset;",
    ".monaco-workbench .part>.composite.title>.title-actions .monaco-action-bar .actions-container": "justify-content: flex-start;",
    // Explorer actions at bottom
    ".explorer-viewlet .monaco-pane-view .pane>.pane-header>.actions": "display: flex; position: absolute; left: 8px; top: calc(100vh - 66px); z-index: 2;",
    ".explorer-viewlet .monaco-pane-view .pane>.pane-header>.actions .action-item": "padding-right: 4px;",
    ".explorer-viewlet .monaco-pane-view .pane": "overflow: visible;",
    ".explorer-viewlet .monaco-pane-view .pane>.pane-header": "overflow: visible;",
    // Activity bar badge
    "body.activity-bar-at-bottom .monaco-workbench .activitybar>.content .monaco-action-bar .badge.progress-badge > .badge-content:before": "display: none;",
    "body.activity-bar-at-bottom .monaco-workbench .activitybar>.content .monaco-action-bar .badge > .badge-content": "top: 6px; left: 22px !important; font-size: 0 !important; height: 6px; min-width: 6px; width: 6px; padding: 0; background-color: #B285D1 !important;",
    // Tab drop shadow
    ".monaco-editor .scroll-decoration": "box-shadow: unset;"
  },
  "debug.toolBarLocation": "docked",
  "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
  "editor.cursorStyle": "line-thin",
  "editor.fontFamily": "'SF Mono', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",
  "editor.formatOnSave": true,
  "editor.lineHeight": 17,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.overviewRulerBorder": false,
  "editor.renderIndentGuides": false,
  "editor.renderLineHighlight": "all",
  "editor.scrollBeyondLastLine": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "[Default Light+]": {
      "comments": "#717f8b",
      "functions": "#7a55b3",
      "keywords": "#A3499F",
      "numbers": "#1836D0",
      "strings": "#C73F28",
      "types": "#432DA9",
      "variables": "#277BAC"
    },
    "[Default Dark+]": {
      "comments": "#808C97",
      "functions": "#AB87E5",
      "keywords": "#F484B1",
      "numbers": "#D8C885",
      "strings": "#F58875",
      "types": "#D5BDFA",
      "variables": "#5FAEC8"
    }
  },
  "editor.wordWrap": "on",
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "extensions.ignoreRecommendations": false,
  "files.associations": { "*.plist": "xml" },
  "git.autofetch": true,
  "git.confirmSync": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.disableLanguages": ["vue", "markdown", "css", "csharp"],
  "ruby.format": "rubocop",
  "ruby.intellisense": false,
  "ruby.useLanguageServer": true,
  "sort-imports.default-sort-style": "module",
  "terminal.explorerKind": "external",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.23,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.nativeTabs": true,
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "[Default Light+]": {
      "activityBar.background": "#f3f3f3",
      "activityBar.border": "#d7d7d7",
      "activityBar.foreground": "#0170F5",
      "activityBar.inactiveForeground": "#616161",
      "sideBar.border": "#d7d7d7",
      "statusBar.background": "#ffffff",
      "statusBar.noFolderBackground": "#ffffff",
      "statusBar.border": "#d7d7d7",
      "statusBar.foreground": "#818181",
      "tab.border": "#d7d7d7",
      "tab.activeBorder": "#ffffff",
      "editorGroupHeader.tabsBorder": "#d7d7d7",
      "editorLineNumber.foreground": "#A7A7A7",
      "editorLineNumber.activeForeground": "#000000",
      "editor.lineHighlightBorder": "#ffffff00",
      "editor.lineHighlightBackground": "#ECF5FF"
    },
    "[Default Dark+]": {
      "activityBar.background": "#252526",
      "activityBar.border": "#474747",
      "activityBar.foreground": "#0170F5",
      "activityBar.inactiveForeground": "#cccccc",
      "sideBar.border": "#474747",
      "statusBar.background": "#1E1E1E",
      "statusBar.noFolderBackground": "#1E1E1E",
      "statusBar.border": "#474747",
      "statusBar.foreground": "#A9A9A9",
      "tab.border": "#474747",
      "tab.activeBorder": "#1E1E1E",
      "editorGroupHeader.tabsBorder": "#474747",
      "editorLineNumber.foreground": "#737478",
      "editorLineNumber.activeForeground": "#ffffff",
      "editor.lineHighlightBorder": "#1E1E1E00",
      "editor.lineHighlightBackground": "#2F3239"
    }
  },
  "workbench.editor.showIcons": false,
  "workbench.editor.tabCloseButton": "left",
  "window.autoDetectColorScheme": true,
  "window.titleBarStyle": "native",
  "workbench.iconTheme": "file-icons-mac",
  "python.languageServer": "Microsoft",
  "workbench.colorTheme": "Default Light+"
}
